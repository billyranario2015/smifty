{% extends 'base.html.twig' %}

{% block pagecontent %}
	<section id="subpage">
		<div class="container">
			<div class="row">
				<div class="b-container">
                     <h1 class="banner-heading animated fadeInUp">select a restaurant</h1>
                 </div>
			</div>

			<div class="row">
				<div class="restaurant-logos">
					{% for r in restaurant %}
					<div class="col-xs-3 col-md-2 animated fadeInUp">
						<a href="/restaurant/order/{{ r.id }}" class="thumbnail">
							<img src="/assets/images/restaurants/{{ r.logo }}" alt="{{ r.name }}">
						</a>
					</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</section>
	
{% endblock %}